<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="12dp"
        android:height="12dp"
        android:left="4dp"
        android:top="2dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape>
                <solid android:color="@color/color_main_start" />
                <corners android:radius="2dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:width="32dp"
        android:height="16dp"
        android:left="10dp">
        <shape>
            <gradient
                android:angle="0"
                android:endColor="@color/color_main_end"
                android:startColor="@color/color_main_start" />
            <corners
                android:bottomRightRadius="2dp"
                android:topRightRadius="2dp" />
        </shape>
    </item>

</layer-list>