<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="40dp"
        android:height="18dp"
        android:left="10dp">
        <shape>
            <gradient
                android:angle="0"
                android:endColor="@color/color_main_end"
                android:startColor="@color/color_main_start" />
            <corners
                android:bottomRightRadius="2dp"
                android:topRightRadius="2dp" />
        </shape>
    </item>

    <item
        android:width="12.6dp"
        android:height="12.6dp"
        android:left="10dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="0"
            android:pivotY="0">
            <shape>
                <solid android:color="@color/color_main_start" />
            </shape>
        </rotate>
    </item>

</layer-list>