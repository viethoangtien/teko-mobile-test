<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="productDescriptionResponse"
            type="com.teko.hoangviet.androidtest.data.network.response.ProductDescriptionResponse" />
    </data>

    <RelativeLayout
        android:id="@+id/rl_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12_dp"
        android:layout_marginEnd="@dimen/margin_12_dp"
        android:paddingHorizontal="@dimen/content_padding_12_dp"
        tools:background="@color/color_pale_grey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8_dp"
            android:layout_marginBottom="@dimen/margin_8_dp"
            android:text="@{productDescriptionResponse.key}"
            android:textColor="@color/color_grey"
            tools:text="Thương hiệu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_8_dp"
            android:layout_marginBottom="@dimen/margin_8_dp"
            android:text="@{productDescriptionResponse.value}"
            android:textColor="@color/color_text_dark"
            tools:text="Cooler Master" />

    </RelativeLayout>
</layout>
