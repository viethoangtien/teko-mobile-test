<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/search_frame_size"
    android:background="@color/md_white_1000">

    <ImageView
        android:id="@+id/imv_remove"
        android:layout_width="@dimen/quantity"
        android:layout_height="match_parent"
        android:padding="@dimen/content_padding_8_dp"
        android:src="@drawable/remove_circle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_selected"
        android:layout_width="@dimen/quantity"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/color_text_dark"
        android:textSize="@dimen/textsize_15_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imv_remove"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2" />

    <ImageView
        android:id="@+id/imv_add"
        android:layout_width="@dimen/quantity"
        android:layout_height="match_parent"
        android:padding="@dimen/content_padding_8_dp"
        android:src="@drawable/add_circle"
        app:layout_constraintStart_toEndOf="@id/tv_selected" />

</androidx.constraintlayout.widget.ConstraintLayout>